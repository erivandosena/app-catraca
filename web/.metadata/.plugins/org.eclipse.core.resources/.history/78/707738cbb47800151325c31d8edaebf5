<?php

class UnidadeDAO{

	public function retornaLista(){
		$lista = array();
		
		$dao = new DAO();
		$result = $dao->getConexao()->query("SELECT * FROM unidade");
		foreach ($result as $linha){
			$unidade = new Unidade();
			$unidade->setId($linha['unid_id']);
			$unidade->setNome($linha['unid_nome']);
				
			$lista[] = $unidade;
				
		}
	}
	
	
}


?>