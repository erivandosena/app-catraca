<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml" lang="pt-br" xml:lang="pt-br" >
<head>
<meta http-equiv="Content-Type" content="text/html; charset=iso-8859-1" />
<title>API Catraca - Cliente prot&oacute;tipo</title>
<meta name="viewport" content="width=device-width, initial-scale=1.0" />
<link href="http://netdna.bootstrapcdn.com/twitter-bootstrap/2.3.2/css/bootstrap-combined.min.css" rel="stylesheet" />
<script src="http://ajax.aspnetcdn.com/ajax/jquery/jquery-1.9.0.js"></script>
<script src="http://netdna.bootstrapcdn.com/twitter-bootstrap/2.3.2/js/bootstrap.min.js"></script>
<script src="http://ajax.aspnetcdn.com/ajax/knockout/knockout-2.2.1.js"></script>
</head>
<body>
    <div class="navbar">
        <div class="navbar-inner">
            <a class="brand" href="#">API RESTful Catraca - Cliente prot&oacute;tipo</a>
        </div>
    </div>
    <div id="main" class="container">
    	<button data-bind="click: beginAdd" class="btn">Nova Tarefa</button>
    	<br /><br />
        <table class="table table-striped">
            <tr><td style="width: 1px;"></td><td><b>Descri&ccedil;&atilde;o</b></td><td><b>Op&ccedil;&atilde;o</b></td></tr>
            <!-- ko foreach: tipos -->
            <tr>
                <td>
                    <!--
                    <span data-bind="visible: done" class="label label-success">Finalizado</span>
                    <span data-bind="visible: !done()" class="label label-important">Em andamento</span>
                    -->
                </td>
                <td><p><b data-bind="text: nome"></b></p><p data-bind="text: valor"></p></td>
                <td>
                    <button data-bind="click: $parent.beginEdit" class="btn">Edita</button>
                    <button data-bind="click: $parent.remove" class="btn">Deleta</button>
                    <!--
                    <span data-bind="visible: done">
                        <button data-bind="click: $parent.markInProgress" class="btn">Marcar em andamento</button>
                    </span>
                    <span data-bind="visible: !done()">
                        <button data-bind="click: $parent.markDone" class="btn">Marcar finalizado</button>
                    </span>
                    -->
                </td>
            </tr>
            <!-- /ko -->
        </table>
        <button data-bind="click: beginAdd" class="btn">Nova Tarefa</button>
    </div>
    <div id="add" class="modal hide fade" tabindex="=1" role="dialog" aria-labelledby="addDialogLabel" aria-hidden="true">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">X</button>
            <h3 id="addDialogLabel">Nova Tarefa</h3>
        </div>
        <div class="modal-body">
            <form class="form-horizontal">
                <div class="control-group">
                    <label class="control-label" for="inputTipo">T&iacute;tulo</label>
                    <div class="controls">
                        <input data-bind="value: nome" type="text" id="inputTipo" placeholder="Informe o título da tarefa" style="width: 150px;">
                    </div>
                </div>
                <div class="control-group">
                    <label class="control-label" for="inputDescription">Descri&ccedil;&atilde;o</label>
                    <div class="controls">
                        <input data-bind="value: valor" type="text" id="inputDescription" placeholder="Informe uma descrição" style="width: 300px;">
                    </div>
                </div>
            </form>
        </div>
        <div class="modal-footer">
            <button data-bind="click: addTipo" class="btn btn-primary">Salva Tarefa</button>
            <button class="btn" data-dismiss="modal" aria-hidden="true">Cancela</button>
        </div>
    </div>
    <div id="edit" class="modal hide fade" tabindex="=1" role="dialog" aria-labelledby="editDialogLabel" aria-hidden="true">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">X</button>
            <h3 id="editDialogLabel">Edita Tarefa</h3>
        </div>
        <div class="modal-body">
            <form class="form-horizontal">
                <div class="control-group">
                    <label class="control-label" for="inputTipo">Tarefa</label>
                    <div class="controls">
                        <input data-bind="value: nome" type="text" id="inputTipo" placeholder="Informe o título da tarefa" style="width: 150px;">
                    </div>
                </div>
                <div class="control-group">
                    <label class="control-label" for="inputDescription">Descri&ccedil;&atilde;o</label>
                    <div class="controls">
                        <input data-bind="value: valor" type="text" id="inputDescription" placeholder="Informe uma descrição" style="width: 300px;">
                    </div>
                </div>
                <!--
                <div class="control-group">
                    <div class="controls">
                        <label class="checkbox">
                            <input data-bind="checked: done" type="checkbox">Finalizado
                        </label>
                    </div>
                </div>
                -->
            </form>
        </div>
        <div class="modal-footer">
            <button data-bind="click:editTipo" class="btn btn-primary">Atualizar Tarefa</button>
            <button class="btn" data-dismiss="modal" aria-hidden="true">Cancela</button>
        </div>
    </div>
    <div id="login" class="modal hide fade" tabindex="=1" role="dialog" aria-labelledby="loginLabel" aria-hidden="true">
        <div class="modal-header">
            <h3 id="loginLabel">&Aacute;rea Restrita</h3>
        </div>
        <div class="modal-body">
            <form class="form-horizontal">
                <div class="control-group">
                    <label class="control-label" for="inputUsername">Usu&aacute;rio</label>
                    <div class="controls">
                        <input data-bind="value: username" type="text" id="inputUsername" placeholder="Informe o usuario">
                    </div>
                </div>
                <div class="control-group">
                    <label class="control-label" for="inputPassword">Senha</label>
                    <div class="controls">
                        <input data-bind="value: password" type="password" id="inputPassword" placeholder="Informe à senha">
                    </div>
                </div>
            </form>
        </div>
        <div class="modal-footer">
            <button data-bind="click: login" class="btn btn-primary" data-dismiss="modal" aria-hidden="true">Logar</button>
        </div>
    </div>

    <script type="text/javascript">
        function TiposViewModel() {
            var self = this;
            //self.tiposURI = 'http://192.168.1.253:27289/api/catraca'; 
            self.tiposURI = 'http://10.5.2.253:27289/api/catraca'; //ou 37389
            self.username = "";
            self.password = "";
            self.tipos = ko.observableArray();

            self.ajax = function(uri, method, data) {
                var request = {
                    url: uri,
                    type: method,
                    contentType: "application/json",
                    accepts: "application/json",
                    cache: false,
                    dataType: 'json',
                    data: JSON.stringify(data),
                    beforeSend: function (xhr) {
                        //xhr.setRequestHeader("Authorization", "Basic " + btoa(self.username + ":" + self.password));
                        xhr.setRequestHeader("Authorization", "Basic " + btoa("catraca:Unilab"));
                    },
                    error: function(jqXHR) {
                        console.log("ajax error " + jqXHR.status);
                    }
                };
                return $.ajax(request);
            }
            self.updateTipo = function(tipo, newTipo) {
                var i = self.tipos.indexOf(tipo);
                self.tipos()[i].uri(newTipo.uri);
                self.tipos()[i].nome(newTipo.nome);
                self.tipos()[i].valor(newTipo.valor);
            }

            self.beginAdd = function() {
                $('#add').modal('show');
            }
            self.add = function(tipo) {
                self.ajax(self.tiposURI, 'POST', tipo).done(function(data) {
                    self.tipos.push({
                        uri: ko.observable(data.tipo.uri),
                        nome: ko.observable(data.tipo.nome),
                        valor: ko.observable(data.tipo.valor)
                    });
                });
            }
            self.beginEdit = function(tipo) {
                editTipoViewModel.setTipo(tipo);
                $('#edit').modal('show');
            }
            self.edit = function(tipo, data) {
                self.ajax(tipo.uri(), 'PUT', data).done(function(res) {
                    self.updateTipo(tipo, res.tipo);
                });
            }
            self.remove = function(tipo) {
                self.ajax(tipo.uri(), 'DELETE').done(function() {
                    self.tipos.remove(tipo);
                });
            }
            self.markInProgress = function(tipo) {
                self.ajax(tipo.uri(), 'PUT', { done: false }).done(function(res) {
                    self.updateTipo(tipo, res.tipo);
                });
            }
            self.beginLogin = function() {
                $('#login').modal('show');
            }
            self.login = function(username, password) {
                self.username = username;
                self.password = password;
                self.ajax(self.tiposURI, 'GET').done(function(data) {
                    for (var i = 0; i < data.tipos.length; i++) {
                        self.tipos.push({
                            uri: ko.observable(data.tipos[i].uri),
                            nome: ko.observable(data.tipos[i].nome),
                            valor: ko.observable(data.tipos[i].valor)
                        });
                    }
                }).fail(function(jqXHR) {
                    if (jqXHR.status == 403)
                        setTimeout(self.beginLogin, 500);
                });
            }
            
            self.beginLogin();
        }
        function AddTipoViewModel() {
            var self = this;
            self.nome = ko.observable();
            self.valor = ko.observable();
 
            self.addTipo = function() {
                $('#add').modal('hide');
                tiposViewModel.add({
                    nome: self.nome(),
                    valor: self.valor()
                });
                self.nome("");
                self.valor("");
            }
        }
        function EditTipoViewModel() {
            var self = this;
            self.nome = ko.observable();
            self.valor = ko.observable();
 
            self.setTipo = function(tipo) {
                self.tipo = tipo;
                self.nome(tipo.nome());
                self.valor(tipo.valor());
                $('edit').modal('show');
            }
 
            self.editTipo = function() {
                $('#edit').modal('hide');
                tiposViewModel.edit(self.tipo, {
                    nome: self.nome(),
                    valor: self.valor()
                });
            }
        }
        function LoginViewModel() {
            var self = this;
            self.username = ko.observable();
            self.password = ko.observable();
 
            self.login = function() {
                $('#login').modal('hide');
                tiposViewModel.login(self.username(), self.password());
            }
        }
        
        var tiposViewModel = new TiposViewModel();
        var addTipoViewModel = new AddTipoViewModel();
        var editTipoViewModel = new EditTipoViewModel();
        var loginViewModel = new LoginViewModel();
        
        ko.applyBindings(tiposViewModel, $('#main')[0]);
        ko.applyBindings(addTipoViewModel, $('#add')[0]);
        ko.applyBindings(editTipoViewModel, $('#edit')[0]);
        ko.applyBindings(loginViewModel, $('#login')[0]);
    </script>
</body>
</html>
